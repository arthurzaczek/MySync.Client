                                Height="{StaticResource HeaderButtonSize}" Width="{StaticResource HeaderButtonSize}" 
                                Command="{Binding ElementName=Window, Path=MaximizeCommand}" Visibility="{Binding ElementName=Window, Path=MaximizeButtonVisibility}">
