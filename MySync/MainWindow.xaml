<Window x:Class="My_Sync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Loaded="Window_Loaded" Title="mySync" 
        Topmost="True" ResizeMode="CanMinimize"
        ShowInTaskbar="False"
        AllowsTransparency="True" 
        WindowStyle="None"
        Background="Transparent"
        Height="350" Width="525" 
        Icon="Images/icon.ico" >

    <Window.Resources>
        <sys:Double x:Key="ItemWidth">55</sys:Double>
        <sys:Double x:Key="ImageSize">32</sys:Double>
        <sys:Double x:Key="HeaderButtonSize">20</sys:Double>

        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border Name="Border" Background="GhostWhite" BorderBrush="Black" BorderThickness="0.5" CornerRadius="3,3,0,0" >
                                <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,5,12,5"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="LightGray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Border BorderBrush="Black" Background="GhostWhite" BorderThickness="2" CornerRadius="10,0,0,0">
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" Height="Auto" Width="Auto" >
                <StackPanel Orientation="Horizontal" Margin="0,0,0,-30" HorizontalAlignment="Right" Panel.ZIndex="0">
                    <!-- Header Button -->
