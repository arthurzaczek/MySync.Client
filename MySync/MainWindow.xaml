                        </Button>
                    </StackPanel>
                </StackPanel>
                <TabControl x:Name="TABControl" Height="Auto" Width="Auto" Margin="2">
                    <TabItem x:Name="TABGeneral">
                        <TabItem.Header>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="{StaticResource ItemWidth}">
                                <Image Source="Images/Tabs/general.png" Height="{StaticResource ImageSize}" Width="{StaticResource ImageSize}" />
                                <TextBlock Text="{DynamicResource tabGeneral}" Margin="2,0,0,0" HorizontalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Label Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                            <TextBlock Grid.Row="0" Grid.Column="0" Padding="10" Text="{DynamicResource language}"/>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="TABAccount">
                        <TabItem.Header>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="{StaticResource ItemWidth}">
                                <Image Source="Images/Tabs/account.png" Height="{StaticResource ImageSize}" Width="{StaticResource ImageSize}" />
                                <TextBlock Text="{DynamicResource tabAccount}" Margin="2,0,0,0" HorizontalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid Background="#FFE5E5E5"/>
                    </TabItem>
                    <TabItem x:Name="TABFolder">
                        <TabItem.Header>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="{StaticResource ItemWidth}">
                                <Image Source="Images/Tabs/folder.png" Height="{StaticResource ImageSize}" Width="{StaticResource ImageSize}" />
                                <TextBlock Text="{DynamicResource tabFolder}" Margin="2,0,0,0" HorizontalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid/>
                    </TabItem>
                    <TabItem x:Name="TABServer">
                        <TabItem.Header>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="{StaticResource ItemWidth}">
                                <Image Source="Images/Tabs/server.png" Height="{StaticResource ImageSize}" Width="{StaticResource ImageSize}" />
                                <TextBlock Text="{DynamicResource tabServer}" Margin="2,0,0,0" HorizontalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid />
                    </TabItem>
                    <TabItem x:Name="TABFilter">
                        <TabItem.Header>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="{StaticResource ItemWidth}">
                                <Image Source="Images/Tabs/filter.png" Height="{StaticResource ImageSize}" Width="{StaticResource ImageSize}" />
                                <TextBlock Text="{DynamicResource tabFilter}" Margin="2,0,0,0" HorizontalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid x:Name="grid">
                            <StackPanel Orientation="Vertical" Height="{Binding Height, ElementName=grid, Mode=OneWay}">
                                <ListView  Name="FilterLVFilter" 
                                   HorizontalContentAlignment="Stretch" 
                                   VerticalContentAlignment="Stretch" 
                                   Margin="0,0,0,5" 
                                   Height="200"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Height="23" HorizontalAlignment="Stretch" Name="FilterTBTerm"  Width="250" Margin="0,0,5,0" HorizontalContentAlignment="Stretch" />
                                    <Button Content="{DynamicResource filterAdd}"    Height="23"  Name="FilterBTNAddTerm"    Click="FilterBTNAddTerm_Click"     Width="75" Margin="0,0,5,0"  />
                                    <Button Content="{DynamicResource filterEdit}"   Height="23"  Name="FilterBTNEditTerm"   Click="FilterBTNEditTerm_Click"    Width="75" Margin="0,0,5,0" />
                                    <Button Content="{DynamicResource filterDelete}" Height="23"  Name="FilterBTNDeleteTerm" Click="FilterBTNDeleteTerm_Click"  Width="75" Margin="0,0,5,0" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </Border>
    </Grid>
</Window>
